<!--pages/route/peroncar/personcar.wxml-->
<view class="navbar">
  <view class='usrimage' bindtap='topersonal'>
    <image src='../images/peopleface.png' style="width: 30px; height: 30px; background-color: white;"></image>
  </view>
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
</view>

<!--专车-->

<!-- <view class='middlemap'> -->
<map id="map4select" longitude="{{longitude}}" latitude="{{latitude}}" markers="{{markers}}" scale="15" style="width:{{map_width}}px;height:{{map_height}}px;background-color:white;margin-top:5%;" controls="{{controls}}" show-location='true' hidden='{{maphides}}'>
  <cover-view class='return' style='margin-top:{{icontop}}px;' bindtap='returnback'>
    <cover-image src='../images/location.png' style='width:33px;height:33px;margin:8px;'></cover-image>
  </cover-view>
  <!-- 点击事件后的变化 -->
  <cover-view class='endtop' style='margin-top:0px;' hidden='{{endtophide}}'>
    <cover-view class='timecolor'bindtap='changeperson'>
      <cover-image src='../images/time_fill.png' style='width: 20px; height: 20px; background-color: white;margin-top:4%;margin-left:5%;'></cover-image>
      <cover-view style='margin-left:5%;margin-top:4%;'>日期：{{selectdate}},时间：{{selecttime}}</cover-view>
    </cover-view>
    <cover-view class='peoplenum'>乘车{{peoplenum}}人</cover-view>
  </cover-view>
  <cover-view class='selectcar' hidden='{{endtophide}}'>
    <cover-view class='sendcar' bindtap='sendcar' style=' background-color:  {{sendcolor}};'>
      <cover-view style='margin-top:4%;'>送车上门</cover-view>
    </cover-view>
    <cover-view class='takecar' bindtap='takecar' style=' background-color: {{takecolor}};'>
      <cover-view style='margin-top:4%;'> 前去取车</cover-view>
    </cover-view>
  </cover-view>

  <!-- <cover-view class='messageend' hidden='{{messagehide}}' style='height:{{messageendheight}}px'>
    <cover-view class='futuretime' hidden='{{timehide}}'>
      <cover-image src='../images/time_fill.png' style='width: 20px; height: 20px; background-color: white;margin-top:0%;margin-left:0%;'></cover-image>
      <cover-view style='margin-left:5%;'>{{selecttime}}</cover-view>
    </cover-view>
    <cover-view class='start'>
      <cover-image src='../images/circle.png' style='width: 20px; height: 20px; background-color: white;margin-top:0%;margin-left:0%;'></cover-image>
      <cover-view style='margin-left:5%;'>{{startplace}}</cover-view>
    </cover-view>
  </cover-view> -->
  <!-- 点击送车上门后 -->
  <cover-view class='close' hidden='{{closehide}}' style='margin-top: 20px;'>
    <cover-view class='selectcar'>
      <cover-view class='sendcar' bindtap='sendcar' style=' background-color:  {{sendcolor}};'>
        <cover-view style='margin-top:4%;'>送车上门</cover-view>
      </cover-view>
      <cover-view class='takecar' bindtap='takecar' style=' background-color: {{takecolor}};'>
        <cover-view style='margin-top:4%;'> 前去取车</cover-view>
      </cover-view>
    </cover-view>
    <cover-view class='messageend' style='height:110px;margin-top:0px;'>
      <cover-view class='futuretime' style='margin-top:10%;'>
        <cover-image src='../images/time_fill.png' style='width: 20px; height: 20px; background-color: white;margin-top:0%;margin-left:0%;'></cover-image>
        <cover-view style='margin-left:5%;'>日期：{{selectdate}}，时间：{{selecttime}}</cover-view>
      </cover-view>
      <cover-view class='start' bindtap='selectplace'>
        <cover-image src='../images/circle.png' style='width: 20px; height: 20px; background-color: white;margin-top:0%;margin-left:0%;'></cover-image>
        <cover-view style='margin-left:5%;color:grey;'>{{selectplace}}</cover-view>
      </cover-view>
    </cover-view>
    <cover-view class='nextochange'>
      <cover-view style='margin-top:1%;font-size:15px;'>确认预约</cover-view>
    </cover-view>
  </cover-view>
  <!-- 自驾封面 -->
  <cover-view class='specialmessage' style='over-flow:scroll;margin-top:0px;' hidden='{{specialcarhide}}'>
    <cover-view class='selection'>
      <cover-view style='font-size:13px;margin-top:5%;;margin-left:44%;color:grey;'>普通型</cover-view>
      <cover-view style='display:flex;'>
        <cover-image src='../images/danche.png' style='width: 70px; height: 80px; background-color: white;margin-top:0%;margin-left:-5%;'></cover-image>
        <cover-image src='../images/sdanche.png' style='width: 90px; height: 95px; background-color: white;margin-top:-6%;margin-left:23%;'></cover-image>
        <cover-image src='../images/danche.png' style='width: 70px; height: 80px; background-color: white;margin-top:0%;margin-left:20%;'></cover-image>
      </cover-view>
      <cover-view style='font-size:13px;margin-top:-9%;;margin-left:44%;'>约{{carmoney}}元</cover-view>
      <cover-view style='font-size:13px;margin-top:2%;;margin-left:41%;color:grey;'>个人支付</cover-view>
    </cover-view>
    <cover-view class='nexto' bindtap='changet'>
      <cover-view style='margin-top:1%;font-size:15px;' bindtap='changetitle'>{{owntitle}}</cover-view>
    </cover-view>
  </cover-view>
</map>

<view hidden='{{futuresethide}}'>
  <picker mode="date" value='{{selectdate}}' start="2018-7-1" end="2030-7-1" bindchange='bindTimeChangedate'>
    <view style='margin-left:30%;margin-top:200px;'>选择日期：{{selectdate}}</view>
  </picker>
  <picker mode="time" value='{{selecttime}}' start="09:01" end="21:01" bindchange='bindTimeChangeperson'>
    <view style='margin-left:30%;'>选择时间{{selecttime}}</view>
  </picker>
</view>
<modal hidden="{{hiddenmodalput}}" confirm-text="是" cancel-text="否" bindcancel="cancel" bindconfirm="confirm">
  <image src='../images/icon.png' style='width: 60px; height: 60px; background-color: white;margin-left:40%'></image>
  <view style='margin-left:33%;'>是否呼叫专车</view>
</modal>